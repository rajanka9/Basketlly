<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_execrise_layout"
    android:layout_width="match_parent"
    android:layout_height="144sp"
    android:background="@drawable/layout_boarder_blue"
    android:layout_margin="10sp"
    >

    <TextView
        android:id="@+id/item_name_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="29dp"
        android:layout_marginTop="29dp"
        android:fontFamily="sans-serif-medium"
        android:text="Exercise 1"
        android:textAlignment="center"
        android:textAllCaps="false"

        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@id/item_date_trainig"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_date_trainig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="29dp"
        android:layout_marginBottom="29dp"
        android:fontFamily="@font/fredoka_one"
        android:text="29.9.2022"

        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_name_training"
        app:layout_constraintVertical_bias="0.717" />

    <ImageView
        android:id="@+id/item_image_training"
        android:layout_width="116sp"
        android:layout_height="116sp"
        android:layout_marginEnd="29dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>