<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.basketlly">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Basketlly">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <!--
         pridane aby nam nepadala app
        + vsetky activity by mali byt v manifeste

        screenOrientation aby sa nam neotacala app niektore app to maju takto nastavene naschval (napr. instagram)
            screen rotaion in manifest - https://www.youtube.com/watch?v=pRg3f0sdHf8
        -->
        <activity android:name=".Quotes"
            android:screenOrientation="portrait"
            />

        <activity android:name=".cvicenia.CvicenieScreen"
            android:screenOrientation="portrait"

            />

        <activity android:name=".treningy.TreningyScreen"
            android:screenOrientation="portrait"

            />

        <activity android:name=".trening.TreningScreen"
            android:screenOrientation="portrait"

            />

    </application>

</manifest>